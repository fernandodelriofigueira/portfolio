---
import UXUI from "../icons/UXUI.astro";
import Development from "../icons/Development.astro";
import Graphic from "../icons/Graphic.astro";

const TAGS = {
  UXUI: {
    name: "UX/UI",
    class: "bg-yellow-500 text-white",
    icon: UXUI,
  },
  DEVELOPMENT: {
    name: "Development",
    class: "bg-green-500 text-white",
    icon: Development,
  },
  GRAPHIC: {
    name: "Graphic",
    class: "bg-red-500 text-white",
    icon: Graphic,
  },
};

const PROJECT = [
  {
    title: "Moodle 2.0 - e-Learning redefinido",
    description:
      "Rediseño del concepto de Moodle estableciendo una interfaz más fresca y una experiencia más agradable.",
    link: `/project`,
    coverimage: `/moodle.png`,
    image1: `/moodle.png`,
    image2: `/moodle.png`,
    image3: `/moodle.png`,
    context: "",
    problem: "",
    solution: "",
    process: "",

    tags: [TAGS.GRAPHIC, TAGS.UXUI],
  },
];
---

{
  PROJECT.map(({ coverimage, title, description, tags }) => (
    <div class="w-full">
      <div class="max-w-xl">
        <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
          {title}
        </h1>
      </div>
      <div class="w-full">
        <div class="relative flex mt-5 w-full h-80 flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl">
          <img
            alt={title}
            class="object-cover object-center w-full h-full transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
            loading="lazy"
            src={coverimage}
          />
        </div>
        <div class="flex flex-wrap mt-6">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>
        <div class="mt-10 w-full sm:w-3/4 md:w-3/4 text-2xl text-gray-700 dark:text-gray-400">
          {description}
        </div>
      </div>
    </div>
  ))
}
